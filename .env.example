# Required â€” no defaults; app fails at startup if missing
# Copy to .env and set values (never commit .env)

# MySQL (cards database)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=
MYSQL_DATABASE=cards

# Meilisearch
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_MASTER_KEY=
MEILISEARCH_INDEX_NAME=cards

# JWT (Resource Server: public key to verify tokens from Auth Service)
# PEM format; can be single line from AWS SSM
JWT_PUBLIC_KEY=
JWT_ALGORITHM=RS256

# Optional
INDEXER_BATCH_SIZE=5000
DEBUG=false
